pkg(
    name = "pkg-config",
    source = "https://pkgconfig.freedesktop.org/releases/pkg-config-0.29.2.tar.gz",
    version = "0.29.2",
    sha256 = "6fc69c01688c9458a57eb9a1664c9aba372ccda420a02bf4429fe610e7e7d591"
)

def install(ctx):
  system("./configure", "--disable-debug",
                        "--prefix="+ctx.prefix,
                        "--disable-host-tool",
                        "--with-internal-glib")
  system("make")
  system("make", "install")

