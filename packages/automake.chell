pkg(
  name: "automake"
  source: "https://ftp.gnu.org/gnu/automake/automake-1.16.2.tar.xz"
  version: "1.16.2"
  sha256: "ccc459de3d710e066ab9e12d2f119bd164a08c9341ca24ba22c9adaa179eedd0"
  dependencies: [
    "autoconf",
  ]

  def install(ctx) {
    set_env("PERL", "/usr/bin/perl")

    system("./configure", "--prefix="+ctx.prefix)
    system("make", "install")
  }
)
